// je hebt overgewicht bij  0,6kg per centimeter
function knop() {
var berekenBM = waarde1 / waarde2;
var waarde1 = prompt("Wat is uw gewicht?");
var waarde2 = prompt("Wat is uw lengte in centimers?");
if (waarde2 < waarde1) {
	alert("Je hebt overgewicht!");
}	else {
	alert("Je hebt geen overgewicht!");
}
}
